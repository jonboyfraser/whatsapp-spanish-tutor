{
  "metadata": {
    "name": "Week 1 Conversation Playbook",
    "version": "1.2",
    "timezone": "Europe/London",
    "mode": "progress-driven",
    "levels": [
      "A0",
      "A1"
    ],
    "notes": "A0 ramp → A1 basics. Persona handles tone & bilingual output (ES+EN). Quizzes: ES-only prompts; feedback bilingual."
  },
  "schedule": {
    "daily_triggers": [
      {
        "time": "08:15",
        "type": "warmup"
      },
      {
        "time": "12:30",
        "type": "quiz"
      },
      {
        "time": "16:30",
        "type": "task"
      },
      {
        "time": "20:15",
        "type": "reflection"
      }
    ],
    "fallback": {
      "no_reply_minutes": 120,
      "max_nudges": 1,
      "nudge_template_id": "NUDGE_01"
    },
    "mute_policy": {
      "respect_user_mute": true
    }
  },
  "progression": {
    "state_keys": [
      "current_lesson_id",
      "last_activity_ts",
      "accuracy_rolling"
    ],
    "auto_advance": true,
    "advance_rule": {
      "min_quiz_correct": 1,
      "require_task_response": true
    },
    "review_rule": {
      "if_accuracy_below": 0.5,
      "action": "repeat_lesson",
      "with_variant": true
    },
    "idle_rule": {
      "no_activity_hours": 24,
      "nudge_template_id": "NUDGE_01"
    },
    "commands": {
      "next": "NEXT",
      "review": "REVIEW",
      "mode_es": "ES",
      "mode_en": "EN",
      "mode_bilingual": "BILINGÜE"
    }
  },
  "templates": {
    "nudge": [
      {
        "id": "NUDGE_01",
        "es": "¡Hey! Cuando tengas un minuto seguimos 😉. ¿Te apetece un mini reto rápido?",
        "en": "Hey! When you have a minute we’ll continue 😉. Fancy a quick challenge?"
      }
    ],
    "feedback": {
      "correct": [
        {
          "id": "FB_OK_01",
          "es": "¡Perfecto! 👏",
          "en": "Perfect!"
        },
        {
          "id": "FB_OK_02",
          "es": "¡Genial, muy bien! 🚀",
          "en": "Great, well done!"
        }
      ],
      "partial": [
        {
          "id": "FB_PART_01",
          "es": "¡Casi! 👉 Mira este modelo: ${model}.",
          "en": "Almost! 👉 Here’s the model: ${model}."
        }
      ],
      "incorrect": [
        {
          "id": "FB_BAD_01",
          "es": "Pequeño ajuste: ${tip}. Ejemplo: ${model}.",
          "en": "Small fix: ${tip}. Example: ${model}."
        }
      ]
    }
  },
  "openers": [
